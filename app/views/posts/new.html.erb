<div class="container">
  <div class=" form text-center">
    <h1 class="service-post">サービスを投稿する</h1>
      <%= form_tag("/posts/create", method: :post) do %>
        <div class="form-group">
          <label class="service" for="exampleInputEmail1">サービス名<span class="must-input">必須</span></label>
          <div class="input-form"><input name="name" value="<%= @post.name %>"class="form-control" id="exampleInputEmail1">
          </div>
    <!-- </div> -->

    <!-- <div class="form-group"> -->
      <label class="service" for="exampleInputEmail1">サービスのURL</label>
      <div class="input-form"><input name="url" value="<%= @post.url %>"class="form-control" id="exampleInputEmail1" placeholder="例)https://develotter.net">
