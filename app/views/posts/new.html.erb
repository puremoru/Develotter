      </small>
    <!-- </div> -->

    <!-- <div class="form-group"> -->
      <label class="service" for="exampleInputEmail1">サービスのテーマ</label>
      <div class="input-form">
        <input name="theme" value="<%= @post.theme %>" class="form-control" id="exampleInputEmail1" placeholder="例)教育, グルメ, 恋愛など"><%= @post.theme %>
      </div>
    <!-- </div> -->

    <!-- <div class="form-group"> -->
      <label class="service" for="exampleTextarea">サービスの説明<span class="must-input">必須</span></label>
      <div class="input-form">
        <textarea name="about" class="form-control" id="about-textarea" rows="5"><%= @post.about %></textarea>
      </div>
      <small id="emailHelp" class="form-text text-muted">*)200字以内で自分のサービスをアピールしましょう　<span id="countUp">0</span>字
      </small>
    <!-- </div> -->

    <!-- <div class="form-group"> -->
      <label class="service" for="exampleTextarea">こだわった点やコメント</label>
      <div class="input-form"><textarea name="strength" class="form-control" id="exampleTextarea" rows="5" placeholder="例)UXや仕組みを作る上で工夫したことなど"><%= @post.strength %></textarea></div>
    <!-- </div> -->

    <!-- <input type="submit" value="投稿する" class="btn btn-success new-btn"> -->
      <button type="button submit" id="submit-button" class="btn btn-success new-btn" value="投稿">投稿する
      </button>
      </div>
    <% end %>
  </div>
</div>
